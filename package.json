{
	"name": "personal-site",
	"version": "1.0.0",
	"description": "Personal Website",
	"main": "build/src/index.js",
	"scripts": {
		"start": "node .",
		"dev": "concurrently \"npm run dev-client\" \"npm run dev-server\"",
		"dev-client": "npm start --prefix client",
		"dev-server": "nodemon",
		"build": "npm run build-server && npm run build-client",
		"build-client": "rimraf build/client && npm run build --prefix client && copyfiles client/build/** build/",
		"build-server": "tsc -p .",
		"pm2": "NODE_ENV=production pm2 start build/src/index.js --name tianyu.wang",
		"clean": "gts clean",
		"check": "gts check",
		"fix": "gts fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wtyanan/PersonalWebsite-V3.git"
	},
	"keywords": [
		"Personal Website"
	],
	"author": "Terry Wang",
	"license": "Apache-2.0",
	"licenses": [
		{
			"type": "Apache-2.0",
			"url": "http://www.apache.org/licenses/LICENSE-2.0"
		}
	],
	"bugs": {
		"url": "https://github.com/wtyanan/PersonalWebsite-V3/issues"
	},
	"homepage": "https://github.com/wtyanan/PersonalWebsite-V3#readme",
	"dependencies": {
		"body-parser": "^1.20.1",
		"dotenv": "^8.2.0",
		"express": "^4.18.2",
		"helmet": "^3.23.3",
		"moment-timezone": "^0.5.31",
		"nodemailer": "^6.4.10"
	},
	"devDependencies": {
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.7",
		"@types/helmet": "0.0.45",
		"@types/moment-timezone": "^0.5.13",
		"@types/node": "^12.12.53",
		"@types/nodemailer": "^6.4.0",
		"concurrently": "^5.2.0",
		"copyfiles": "^2.3.0",
		"cors": "^2.8.5",
		"gts": "^2.0.2",
		"nodemon": "^1.19.4",
		"rimraf": "^3.0.2",
		"ts-node": "^8.10.2",
		"tslint": "^5.20.0",
		"typescript": "^3.9.7"
	}
}
